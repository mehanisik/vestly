{
  "name": "vestly",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "lefthook install",
    "db:push": "bun --filter @vestly/db run db:push",
    "db:studio": "bun --filter @vestly/db run db:studio"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.3",
    "lefthook": "^2.0.13",
    "turbo": "^2.7.2",
    "ultracite": "7.0.6"
  },
  "packageManager": "bun@1.1.8"
}
